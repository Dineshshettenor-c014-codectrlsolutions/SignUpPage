<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fname"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:autofillHints=""
        android:hint="Enter First Name"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lname"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/fname"
        android:inputType="text"
        android:autofillHints=""
        android:hint="Enter Last Name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phno"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/lname"
        android:inputType="phone"
        android:autofillHints=""
        android:hint="Enter Phone Number"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/phno"
        android:inputType="textEmailAddress"
        android:autofillHints=""
        android:hint="Enter Email Address"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/email"
        android:inputType="numberPassword"
        android:autofillHints=""
        android:hint="Enter The Password"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cnfpassword"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/password"
        android:inputType="numberPassword"
        android:autofillHints=""
        android:hint="@string/cnf_p"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reffcode"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/cnfpassword"
        android:inputType="numberPassword"
        android:autofillHints=""
        android:hint="Enter The Refferal code"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check"
        android:layout_below="@+id/reffcode"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/terns"
        android:layout_toRightOf="@+id/check"
        android:layout_below="@+id/reffcode"
        android:textSize="18dp"
        android:textStyle="bold|normal"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn"
        android:layout_below="@+id/check"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="SignUp"
        android:textSize="20dp"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>